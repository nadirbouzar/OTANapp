<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Page_Stock">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stocks "
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="8dp" />

    <ImageView
        android:id="@+id/image1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/allemagne" />

    <Button
        android:id="@+id/challenger2"
        android:layout_width="197dp"
        android:layout_height="wrap_content"
        android:text="Allemagne" />

    <ImageView
        android:id="@+id/image2"
        android:layout_width="110dp"
        android:layout_height="53dp"
        android:src="@drawable/etats_unis" />

    <Button
        android:id="@+id/seaking"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:text="etats-unis" />

    <ImageView
        android:id="@+id/image3"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:src="@drawable/france" />

    <Button
        android:id="@+id/m270mlrs"
        android:layout_width="180dp"
        android:layout_height="37dp"
        android:text="france" />

    <ImageView
        android:id="@+id/image4"
        android:layout_width="86dp"
        android:layout_height="51dp"
        android:src="@drawable/royaume_unis" />

    <Button
        android:id="@+id/munitions"
        android:layout_width="299dp"
        android:layout_height="47dp"
        android:text="UK" />

    <ImageView
        android:id="@+id/image5"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:src="@drawable/italie" />

    <Button
        android:id="@+id/munitions2"
        android:layout_width="325dp"
        android:layout_height="41dp"
        android:text="italie" />

</LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>