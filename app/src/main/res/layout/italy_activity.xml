<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ItalyActivity">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Stocks Italie"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/mamba" />

        <Button
            android:id="@+id/mamba"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mamba" />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/stinger" />

        <Button
            android:id="@+id/stinger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="stinger" />
        <ImageView
            android:id="@+id/image3"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/berreta" />

        <Button
            android:id="@+id/berreta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="berreta" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>